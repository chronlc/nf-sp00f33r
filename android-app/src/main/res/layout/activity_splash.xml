<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mag_spoof">

    <!-- ðŸ’€ ELITE SPLASH OVERLAY ðŸ’€ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ðŸ´â€â˜ ï¸ LOGO CENTER ðŸ´â€â˜ ï¸ -->
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/mag_spoof_logo"
        android:src="@drawable/mag_spoof"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/splash_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- âš¡ ELITE TITLE âš¡ -->
    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ðŸ’€ MAG-SP00F ðŸ’€"
        android:textColor="@color/color_elite_green"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/splash_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_logo" />

    <!-- ðŸ“ž ELITE SUBTITLE ðŸ“ž -->
    <TextView
        android:id="@+id/splash_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ðŸ´â€â˜ ï¸ Elite EMV Penetration ðŸ´â€â˜ ï¸"
        android:textColor="@color/color_terminal_amber"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/splash_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_text" />

    <!-- ðŸ”¥ VERSION INFO ðŸ”¥ -->
    <TextView
        android:id="@+id/splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="v31.337 - Real Hardware Only"
        android:textColor="@color/color_matrix_green"
        android:textSize="14sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_subtitle" />

    <!-- ðŸ’€ LOADING INDICATOR ðŸ’€ -->
    <ProgressBar
        android:id="@+id/splash_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:indeterminateTint="@color/color_elite_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_version" />

</androidx.constraintlayout.widget.ConstraintLayout>