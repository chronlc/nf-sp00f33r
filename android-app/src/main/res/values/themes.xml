<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material Design 3 Theme -->
    <style name="Theme.MagSp00f" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- mag-spoof brand styling -->
        <item name="android:windowBackground">@drawable/mag_spoof</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.MagSp00f.Splash" parent="Theme.MagSp00f">
        <item name="android:windowBackground">@color/md_theme_light_primary</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="itemIconTint">@color/md_theme_light_primary</item>
        <item name="itemTextColor">@color/md_theme_light_onSurface</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicatorStyle</item>
    </style>

    <style name="ActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/md_theme_light_primaryContainer</item>
    </style>

    <!-- Card Styles -->
    <style name="MagSpoofCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
    </style>

    <!-- Button Styles -->
    <style name="MagSpoofButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
    </style>

    <style name="MagSpoofOutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="strokeColor">@color/md_theme_light_primary</item>
    </style>
</resources>