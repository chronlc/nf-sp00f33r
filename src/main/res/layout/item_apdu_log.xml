<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- APDU Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSequence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📡 APDU #1"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰ 12:34:56"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="✅ SELECT PPSE - Payment System Environment"
            android:textColor="@color/primary_text"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Command -->
        <TextView
            android:id="@+id/textViewCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"
            android:text="📤 CMD: 00A404000E325041592E5359532E444446303100"
            android:textColor="@color/command_color"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Response -->
        <TextView
            android:id="@+id/textViewResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="monospace"
            android:text="📥 RSP: 6F5B840E325041592E5359532E4444463031A549BF0C469000"
            android:textColor="@color/response_color"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Status and Execution Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewStatusWord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✅ 9000 (SUCCESS)"
                android:textColor="@color/success_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewExecutionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ 156ms"
                android:textColor="@color/accent_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
